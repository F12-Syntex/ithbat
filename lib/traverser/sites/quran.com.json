{
  "domain": "quran.com",
  "name": "Quran.com - Quran Translation & Tafsir",
  "description": "Complete Quran with multiple translations, tafsir (exegesis), and recitations. Provides verse-by-verse Arabic text with translations in 50+ languages.",
  "languages": ["ar", "en"],
  "evidenceTypes": ["quran", "tafsir"],
  "urlStructure": {
    "root": "https://quran.com",
    "search": "https://quran.com/search?q={query}",
    "verse": "https://quran.com/{surah}/{ayah}",
    "surah": "https://quran.com/{surah}",
    "verseRange": "https://quran.com/{surah}/{startAyah}-{endAyah}",
    "parameters": {
      "surah": "Surah number (1-114)",
      "ayah": "Verse number within the surah",
      "startAyah": "Starting verse for a range",
      "endAyah": "Ending verse for a range"
    },
    "examples": {
      "single_verse": "https://quran.com/2/255",
      "verse_range": "https://quran.com/1/1-7",
      "full_surah": "https://quran.com/112",
      "search": "https://quran.com/search?q=mercy"
    }
  },
  "categories": [
    { "id": "quran", "name": "Quran Text", "description": "Arabic text with translations" },
    { "id": "tafsir", "name": "Tafsir", "description": "Scholarly commentary and explanation" }
  ],
  "search": {
    "urlTemplate": "https://quran.com/search?q={query}",
    "resultSelector": "[data-testid='search-result'], .search-result, [class*='SearchResult']",
    "resultLinkSelector": "a[href^='/']",
    "paginationSelector": "[data-testid='pagination-next']",
    "searchTips": "Search by English keywords or Arabic text. Results show verse references and translations."
  },
  "contentPage": {
    "urlPatterns": [
      "quran\\.com/\\d+/\\d+",
      "quran\\.com/\\d+:\\d+",
      "quran\\.com/\\d+/\\d+-\\d+"
    ],
    "description": "Verse pages show Arabic text, translation, transliteration, and audio recitation options"
  },
  "extraction": {
    "title": ["h1", "[data-testid='verse-text']", ".verse-header"],
    "mainContent": ["[data-testid='translation-text']", ".TranslationText", ".translation", "[class*='Translation']", "p[class*='translation']"],
    "metadata": {
      "surah": {
        "selector": "[data-testid='surah-name'], .surah-name, h1",
        "description": "Name of the Surah (chapter)",
        "type": "string"
      },
      "surahNumber": {
        "selector": "[data-testid='surah-number']",
        "description": "Number of the Surah (1-114)",
        "type": "number"
      },
      "ayah": {
        "selector": "[data-testid='verse-number'], .verse-number",
        "description": "Verse number within the Surah",
        "type": "number"
      },
      "arabicText": {
        "selector": "[data-testid='arabic-text'], .arabic, [class*='Arabic']",
        "description": "Original Arabic text of the verse",
        "type": "string"
      }
    },
    "contentNotes": "Verse pages contain Arabic text, multiple translation options, and sometimes tafsir. Citation format: Surah Name (Chapter:Verse)"
  },
  "navigation": {
    "relatedLinks": ["a[href^='/'][href*='/']"],
    "excludePatterns": ["/search", "/settings", "/about", "/developers", "/apps", "/audio", "/radio", "?q="],
    "maxDepth": 1
  },
  "rendering": {
    "requiresJavaScript": true,
    "waitTime": 3000,
    "searchWaitTime": 4000,
    "waitForSelector": "[data-testid='translation-text'], .TranslationText, [class*='Translation']",
    "notes": "Quran.com is a React SPA - requires JavaScript rendering. Search results load dynamically."
  },
  "aiNotes": "When citing Quran verses, use format: Surah Name Chapter:Verse. Example: 'Al-Baqarah 2:255' or 'Quran 2:255'. Always provide the Arabic if possible along with translation. Direct URL format: quran.com/2/255"
}
